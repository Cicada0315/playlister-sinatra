<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="Name" value="<%= @song.name %>"><br><br>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>"><br><br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="[genres][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>>
    <%= genre.name %>
  <% end %>
  <input type="submit" value="Save">
</form>